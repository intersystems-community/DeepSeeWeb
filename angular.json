{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "dsw": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "dsw",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": {
              "base": "dist",
              "browser": ""
            },
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/assets",
              "src/favicon.ico",
              "src/config.json",
              "src/changelog.md",
              "src/manifest.webmanifest",
              {
                "glob": "*",
                "input": "dist-addons/src/addons",
                "output": "addons"
              }
            ],
            "externalDependencies": [
              "./assets/*"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/scss"
              ]
            },
            "styles": [
              "src/scss/lightPivotTable.min.css",
              "node_modules/font-awesome/css/font-awesome.css",
              "src/scss/app.scss",
              {
                "input": "src/scss/themes/contrast.scss",
                "bundleName": "contrast",
                "inject": false
              }
            ],
            "scripts": [
              "src/app/lib/lightPivotTable.js"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "4mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "10kb"
                }
               ],
              "sourceMap": false,
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "clearScreen": true,
              "verbose": true,
              "outputHashing": "all"
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "dsw:build:production"
            },
            "development": {
              "buildTarget": "dsw:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "dsw:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/favicon.ico",
              "src/config.json",
              "src/changelog.md",
              "src/manifest.webmanifest",
              {
                "glob": "*",
                "input": "dist-addons/src/addons",
                "output": "addons"
              }
            ],
            "styles": [
              "src/scss/lightPivotTable.min.css",
              "node_modules/font-awesome/css/font-awesome.css",
              "src/scss/app.scss",
              {
                "input": "src/scss/themes/contrast.scss",
                "bundleName": "contrast",
                "inject": false
              }
            ],
            "scripts": [
              "src/app/lib/lightPivotTable.js"
            ]
          }
        }
      }
    }
  }
}
